services:
  app1:
    build:
      context: ./app1
      args:
        - YAJU=${YAJU}
  app2:
    build:
      context: ./app2
      args:
        - LAIN=${LAIN}
    depends_on:
      - app1
  app3:
    build:
      context: ./app3
    env_file:
      # LIGHT_YAGAMI="夜神月"
      - ./.env.run
    depends_on:
      - app2
  app4:
    build:
      context: ./app4
    depends_on:
      - app3